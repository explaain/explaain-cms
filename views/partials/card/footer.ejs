<input type="hidden" name="links" value="{{:links}}"/>
<div style="display: none;" class="links"></div>
<div style="margin-bottom: 30px; text-align: right;">
  <button type="button" onclick="deleteCard(this)" class="btn btn-danger btn-delete pull-left"><i class="fa fa-lg fa-trash"></i></button>
  <button type="button" onclick="previewCard(this)" class="btn btn-default" style="background: transparent"><i class="fa fa-lg fa-fw fa-eye"></i> Preview</button>
  <button type="button" onclick="saveCard(this)" class="btn btn-primary"><i class="fa fa-lg fa-fw fa-check"></i> Save</button>
</div>
<div style="position: absolute; bottom: 5px; right: 20px; color: #888; width: 100%;">
  <input type="text" value="{{:id}}" style="outline: 0; width: 100%; border: 0; background: transparent; box-shadow: none; font-size: 10px; text-align: right"/>
</div>