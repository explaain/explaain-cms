<script data-template="Question" type="text/x-jsrender">
  <form autocomplete="off">
    <div class="from-group">
      <label>Name</label>
      <input type="text" class="form-control" name="name" value="{{:name}}" />
    </div>
    <div class="from-group">
      <label>Question</label>
      <div -data-name="name" class="textarea">{{:name}}</div>
    </div>
    <div class="from-group">
      <label><i class="fa fa-fw fa-image"></i> Image URL</label>
      <input type="text" class="form-control" name="contentUrl" value="{{:contentUrl}}" />
    </div>
    <div class="from-group">
      <label><i class="fa fa-fw fa-image"></i> Embed Code</label>
      <input type="text" class="form-control" name="embedCode" value="{{:embedCode}}" />
    </div>
    <div class="from-group">
      <label>Description</label>
      <div -data-name="description" class="textarea">{{:description}}</div>
    </div>
    <div class="from-group">
      <label>Answer 1</label>
      <div -data-name="answer1" class="textarea">{{:answer1}}</div>
    </div>
    <div class="from-group">
      <label>Answer 2</label>
      <div -data-name="answer2" class="textarea">{{:answer2}}</div>
    </div>
    <div class="from-group">
      <label>Answer 3</label>
      <div -data-name="answer3" class="textarea">{{:answer3}}</div>
    </div>
    <div class="from-group">
      <label>Answer 4</label>
      <div -data-name="answer4" class="textarea">{{:answer4}}</div>
    </div>
    <div class="from-group">
      <label><i class="fa fa-fw fa-image"></i> Correct Answer (1-4)</label>
      <input type="text" class="form-control" name="correctAnswer" value="{{:correctAnswer}}" />
    </div>
    <%- include card/footer.ejs %>
  </form>
</script>
